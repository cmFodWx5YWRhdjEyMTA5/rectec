<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_collapseMode="parallax"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="35dp">

        <TextView
            android:id="@+id/hi_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:layout_centerHorizontal="true"
            android:text="Hi CharlotCharlotCharlotCharlot!"
            android:singleLine="true"
            android:textColor="@color/color32"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/my_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hi_account"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="7645454@qq.com"
            android:textColor="@color/color777"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@id/hi_account"
            android:visibility="gone"
            android:src="@drawable/my_icon_arrow" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12.5dp"
            android:layout_weight="1"
            android:background="@drawable/orange_btn_corners_bg"
            android:gravity="center"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:translationZ="3dp" />

        <TextView
            android:id="@+id/support"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="12.5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/orange_btn_corners_bg"
            android:gravity="center"
            android:text="Support"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:translationZ="3dp" />
    </LinearLayout>
</LinearLayout>