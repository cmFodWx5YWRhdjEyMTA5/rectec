    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/graydis"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_new_password"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/New_Password"
            android:textColor="@color/color32"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_new_password"
            android:background="@null"
            android:gravity="left"
            android:hint="Enter the new password"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/color444"
            android:textColorHint="@color/color9999"
            android:textSize="15sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/graydis"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_confirm_password"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/Confirm_Password"
            android:textColor="@color/color32"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/tv_confirm_password"
            android:background="@null"
            android:gravity="left"
            android:hint="Re-enter the new password"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/color444"
            android:textColorHint="@color/color9999"
            android:textSize="15sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/graydis"></View>

</LinearLayout>