<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/view_toolbar_back"></include>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/remote_process_three"
        />
    <RelativeLayout
        android:id="@+id/seekArcContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        >
<!--    <com.ym.traegergill.view.SeekArc
        android:id="@+id/seekArc"
        android:background="@color/translucent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="55dp"
        seekarc:arcColor="@color/progress_orange"
        seekarc:arcWidth="30dp"
        seekarc:clockwise="true"
        seekarc:progressColor="@color/orange_light"
        seekarc:progressWidth="50dp"
        seekarc:startAngle="0"
        android:layout_centerHorizontal="true"
        seekarc:touchInside="false"
        android:visibility="invisible"
        />-->
        <com.ym.traegergill.view.circleprogress.CircleProgressView
            android:id="@+id/circleView"
            android:background="@color/translucent"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            CircleProgressView:cpv_autoTextSize="false"
            CircleProgressView:cpv_barColor="@color/orange_light"
            CircleProgressView:cpv_barWidth="50dp"
            CircleProgressView:cpv_contourSize="0dp"
            CircleProgressView:cpv_fillColor="#FFFFFF"
            CircleProgressView:cpv_maxValue="100"
            CircleProgressView:cpv_rimColor="@color/progress_orange"
            CircleProgressView:cpv_rimWidth="25dp"
            CircleProgressView:cpv_seekMode="false"
            CircleProgressView:cpv_showUnit="true"
            CircleProgressView:cpv_spinColor="@color/orange_light"
            CircleProgressView:cpv_textColor="@color/orange_light"
            CircleProgressView:cpv_textScale="0.5"
            CircleProgressView:cpv_textSize="24sp"
            CircleProgressView:cpv_unit=""
            CircleProgressView:cpv_unitColor="@color/orange_light"
            CircleProgressView:cpv_unitPosition="right_bottom"
            CircleProgressView:cpv_unitScale="0.5"
            CircleProgressView:cpv_unitSize="24sp"
            CircleProgressView:cpv_value="0"
            ></com.ym.traegergill.view.circleprogress.CircleProgressView>


    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:clickable="false"
        android:layout_centerInParent="true"
        android:background="@drawable/baise_yuanxing"
    >
       <TextView
           android:id="@+id/progressNum"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="50sp"
           android:text="0%"
           android:textColor="@color/orange_light"
           android:layout_centerInParent="true"
           />
    </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/Device_is_Connecting"
        android:textSize="20sp"
        android:textColor="@color/orange_light"
        />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:lineSpacingExtra="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color32"
        android:textSize="16sp"
        android:text="@string/Try_MakeSure_text"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="27dp"
            >
        <LinearLayout
            android:id="@+id/step1"
            android:layout_marginLeft="97dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/huise_yuanxing"
                />
            <TextView
                android:layout_marginLeft="11dp"
                android:layout_width="200dp"
                android:textSize="13sp"
                android:textColor="@color/color9999"
                android:layout_height="wrap_content"
                android:text="Searching for device"
                />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/step2"
                android:layout_marginLeft="97dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp"
                >
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/huise_yuanxing"
                    />
                <TextView
                    android:layout_marginLeft="11dp"
                    android:layout_width="200dp"
                    android:textSize="13sp"
                    android:textColor="@color/color9999"
                    android:layout_height="wrap_content"
                    android:text="Registering device to the cloud"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/step3"
                android:layout_marginLeft="97dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp"
                >
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/huise_yuanxing"
                    />
                <TextView
                    android:layout_marginLeft="11dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/color9999"
                    android:text="Initializing your device"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>