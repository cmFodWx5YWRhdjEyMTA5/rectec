<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.ym.traegergill.view.ZoomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zoomId="@+id/iv_img"
        app:maxZoom="375dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_top_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="375dp"
                android:id="@+id/iv_img"
                android:scaleType="centerCrop"
                android:transitionName="@string/iv_img_transitionName"
                />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_params"
                android:layout_below="@id/ll_top_img"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="55dp"
                    >
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/colorAAA"
                            android:textStyle="bold"
                            android:text="@string/DIFFICULTY"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/color555"
                            android:text="3/5"
                            android:textStyle="bold"
                            android:layout_marginTop="9dp"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/graydis"
                        ></View>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/colorAAA"
                            android:textStyle="bold"
                            android:text="@string/SERVES"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/color555"
                            android:text="8-12"
                            android:textStyle="bold"
                            android:layout_marginTop="9dp"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/graydis"
                        ></View>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/colorAAA"
                            android:textStyle="bold"
                            android:text="@string/COOK_TIME"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/color555"
                            android:text="4 hrs"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginTop="9dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    >
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/colorAAA"
                            android:textStyle="bold"
                            android:text="@string/PREP_TIME"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/color555"
                            android:text="15 mins"
                            android:textStyle="bold"
                            android:layout_marginTop="9dp"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/graydis"
                        ></View>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/colorAAA"
                            android:textStyle="bold"
                            android:text="@string/HARDWOOD"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/color555"
                            android:text="APPLE"
                            android:textStyle="bold"
                            android:layout_marginTop="9dp"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/graydis"
                    ></View>
                <TextView
                    android:layout_margin="15dp"
                    android:lineSpacingExtra="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/longTextTemp"
                    android:gravity="left|top"
                    android:textSize="14sp"
                    android:textColor="@color/color444"
                    />
             <include
                 layout="@layout/activity_recipes_detail_include"
                 ></include>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:translationZ="8dp"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="-30dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="All American BBQ Spare Ribs"
                android:textColor="@color/orange"
                android:layout_above="@id/ll_params"
                android:background="@drawable/recipes_bg"
                />
        </RelativeLayout>
    </com.ym.traegergill.view.ZoomScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/btn_arrow"
        android:onClick="exit"
        />
        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/recipes_btn_share"
            />
        <ImageView
            android:id="@+id/collect"
            android:layout_toLeftOf="@id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_collect"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
</RelativeLayout>
