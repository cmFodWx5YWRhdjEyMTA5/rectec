<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/view_toolbar_back"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:background="@drawable/view_press"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="50dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Grill_Range"
                android:textColor="@color/color32"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                />
            <CheckBox
                android:id="@+id/grill_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alarms_btn_check"
                android:button="@null"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/set_grill_range"
            android:background="@drawable/view_press"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="50dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Set_Grill_Range"
                android:textColor="@color/color666"
                android:textSize="16sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tempRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16sp"
                android:textColor="@color/color32"
                />
            <TextView
                android:id="@+id/unitRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FFFF"
                android:textSize="16sp"
                android:textColor="@color/color32"
                android:layout_marginRight="6.5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/graydis"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:background="@drawable/view_press"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Probe_A_Temp"
            android:textColor="@color/color32"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            />
        <CheckBox
            android:id="@+id/probe_A_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alarms_btn_check"
            android:button="@null"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/set_a_temp"
            android:background="@drawable/view_press"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="50dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Set_Probe_A_Temp"
                android:textColor="@color/color666"
                android:textSize="16sp"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tempA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="320"
                android:textSize="16sp"
                android:textColor="@color/color32"
                />
            <TextView
                android:id="@+id/unitA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FFFF"
                android:textSize="16sp"
                android:textColor="@color/color32"
                android:layout_marginRight="6.5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/graydis"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:background="@drawable/view_press"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Probe_B_Temp"
            android:textColor="@color/color32"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            />
        <CheckBox
            android:id="@+id/probe_B_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alarms_btn_check"
            android:button="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/set_b_temp"
        android:background="@drawable/view_press"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="50dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Set_Probe_B_Temp"
            android:textColor="@color/color666"
            android:textSize="16sp"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tempB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="320"
            android:textSize="16sp"
            android:textColor="@color/color32"
            />
        <TextView
            android:id="@+id/unitB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/FFFF"
            android:textSize="16sp"
            android:textColor="@color/color32"
            android:layout_marginRight="6.5dp"
            />
    </LinearLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/graydis"
        ></View>
    <TextView
        android:id="@+id/grill_Range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color32"
        android:lineSpacingExtra="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textStyle="italic"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/probe_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color32"
        android:lineSpacingExtra="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textStyle="italic"
        android:textSize="16sp"
        />
</LinearLayout>