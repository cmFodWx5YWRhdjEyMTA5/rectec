<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.ym.traegergill.view.ZoomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zoomId="@+id/iv_img"
        app:maxZoom="375dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="375dp"
                android:id="@+id/iv_img"
                android:scaleType="centerCrop"
                android:transitionName="@string/iv_img_transitionName"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                >
                <ImageView
                    android:id="@+id/userImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/touxiangicon"
                    android:layout_centerVertical="true"
                    />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/userImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Traeger Recipes"
                        android:textColor="@color/orange"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:layout_marginTop="4.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@traegerrecipes"
                        android:textColor="@color/color888"
                        android:textSize="14sp"
                        />
                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/graydis"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                ></View>
            <TextView
                android:layout_margin="15dp"
                android:lineSpacingExtra="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/longTextTemp"
                android:gravity="left|top"
                android:textSize="14sp"
                android:textColor="@color/color555"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                >
                <View
                    android:layout_width="5dp"
                    android:layout_height="24dp"
                    android:background="@color/color31"
                    ></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color32"
                    android:text="Recipes"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_margin="15dp"
                android:layout_width="200dp"
                android:layout_height="150dp">
            <ImageView
                android:id="@+id/recipes_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/gray_bg"
                />
                <TextView
                    android:id="@+id/des_in_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:background="@color/translucent_half"
                    android:gravity="center"
                    android:lineSpacingExtra="8dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="BaLaLa BaLaLa BaLaLa"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </RelativeLayout>
        </LinearLayout>
    </com.ym.traegergill.view.ZoomScrollView>
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_arrow"
        android:fitsSystemWindows="true"
        android:layout_margin="15dp"
        android:onClick="exit"
        />
</RelativeLayout>
