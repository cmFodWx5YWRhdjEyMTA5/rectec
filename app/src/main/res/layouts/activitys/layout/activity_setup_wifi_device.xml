<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include
        android:id="@+id/layout_title"
        layout="@layout/view_toolbar_back"
        ></include>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/remote_process_two"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/add_icon_wifi"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:orientation="vertical"
       >
       <LinearLayout
           android:id="@+id/ll_wifi_name"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:background="@drawable/view_press"
           android:paddingLeft="15dp"
           android:paddingRight="15dp"
       >
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/add_wifi"
           />
       <TextView
           android:id="@+id/wifi_name"
           android:layout_weight="1"
           android:layout_marginLeft="16dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center_vertical|left"
           android:text="@string/ty_ez_current_no_wifi"
           android:textColor="@color/color32"
           android:textSize="16sp"
           />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/my_icon_arrow"
           android:layout_gravity="center_vertical"
           />
   </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:background="@color/graydis"></View>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:paddingLeft="15dp"
           android:paddingRight="15dp"
           >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/add_password"
               />
           <EditText
               android:id="@+id/wifi_password"
               android:layout_weight="1"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="5dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center_vertical|left"
               android:textColor="@color/color32"
               android:textSize="16sp"
               android:hint="Please input password"
               android:background="@null"
               android:inputType="textVisiblePassword"
               android:padding="5dp"
               android:textColorHint="@color/color9999"
               />
           <CheckBox
               android:id="@+id/show_password"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@null"
               android:checked="true"
               android:background="@drawable/eye_checked"
               android:layout_gravity="center_vertical"
               />
       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:background="@color/graydis"></View>
   </LinearLayout>
    <TextView
        android:id="@+id/next_step"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/orange_btn_corners_bg"
        android:text="@string/Next_Step"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
</LinearLayout>