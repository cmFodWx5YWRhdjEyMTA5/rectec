<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include
        android:id="@+id/layout_title"
        layout="@layout/view_toolbar_back"
        ></include>
    <ImageView
        android:id="@+id/top_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/remote_process_one"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/add_icon_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color54"
        android:textSize="16sp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:text="@string/add_device_text1"
        android:lineSpacingExtra="13dp"
        />
    <TextView
        android:id="@+id/next_step"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/orange_btn_corners_bg"
        android:text="@string/Next_Step"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <TextView
        android:id="@+id/other_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_device_text2"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/orange_light"
        />
</LinearLayout>