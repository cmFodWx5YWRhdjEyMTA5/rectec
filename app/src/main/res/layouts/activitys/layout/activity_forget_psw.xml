<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />
<ScrollView
    android:id="@+id/scroll_main_view"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="90dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/white_corners_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:translationZ="@dimen/default_elevation"
    android:overScrollMode="never"
    android:scrollbars="none"
    >
    <LinearLayout
        android:id="@+id/main_login_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/Forget_Password"
            android:textColor="@color/color555"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_select_country"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view_press"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/Country_Area"
                android:textColor="@color/color32"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_country"
                android:drawablePadding="12.5dp"
                android:drawableRight="@drawable/my_icon_arrow"
                android:gravity="right|center"
                android:singleLine="true"
                android:text="China +86"
                android:textColor="@color/color32"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/graydis"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="left|center_vertical"
                    android:text="@string/Email"
                    android:textColor="@color/color32"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_email"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="Enter your Email"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="15dp"
                    android:paddingTop="12dp"
                    android:singleLine="true"
                    android:textColor="@color/color444"
                    android:textColorHint="@color/color9999"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/get_code"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/enable_btn_corners_bg"
                android:gravity="center"
                android:text="get code"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/graydis"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/tv_verification_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left|center_vertical"
                android:text="@string/Verification_Code"
                android:textColor="@color/color32"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_verification_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_password2"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="Enter the received Verification Code"
                android:paddingBottom="15dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textColor="@color/color444"
                android:textColorHint="@color/color9999"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/graydis"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/tv_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left|center_vertical"
                android:text="@string/New_Password"
                android:textColor="@color/color32"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="Enter your new Password"
                android:inputType="textPassword"
                android:paddingBottom="15dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textColor="@color/color444"
                android:textColorHint="@color/color9999"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/graydis"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left|center_vertical"
                android:text="@string/Confirm_Password"
                android:textColor="@color/color32"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="Re-enter your New Password"
                android:inputType="textPassword"
                android:paddingBottom="15dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textColor="@color/color444"
                android:textColorHint="@color/color9999"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/graydis"></View>

        <TextView
            android:id="@+id/complete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/enable_btn_corners_bg"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/Complete"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>
</ScrollView>
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fitsSystemWindows="true"
        android:onClick="exit"
        android:src="@drawable/btn_arrow" />


</RelativeLayout>